.container
  .profile-nav
    .section-title Profile
    .profile-nav-icon
      = link_to edit_profile_path do
        = icon("fas", "edit")
      = link_to destroy_user_session_path, data: { method: 'delete' } do
        = icon("fas", "sign-out-alt")
  .profile-avatar-image
    - if @profile&.avatar&.attached?
      = image_tag @profile.avatar
    - else
      = image_tag 'avatar1.png'
  .profile-username
    = @profile.user.username
  .nav-number
    = link_to list_account_path(id: @profile.user.id) do
      .nav-number-item
        .number-posts
          = "#{@profile.user.articles.count} 投稿"
    = link_to account_followers_path(account_id: @profile.user.id) do
      .nav-number-item
        .number-followers
          = "#{@profile.user.followers.count} フォロワー"
    = link_to account_followings_path(account_id: @profile.user.id) do
      .nav-number-item
        .number-followings
          = "#{@profile.user.followings.count} フォロー"
  .profile-images
    = image_tag 'logo (1).png'
