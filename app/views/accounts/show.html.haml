.container#account-show{data: {id: @user.id}}
  = link_to 'ログアウト', destroy_user_session_path, data: { method: 'delete' }
  %h2 プロフィール
  - if @user.profile&.avatar&.attached?
    = image_tag @user.profile&.avatar
  - else
    = image_tag 'logo.png'
  = @user.username
  .follow-btn.btn-primary.hidden
    フォロー
  .unfollow-btn.btn-primary.hidden
    フォロー解除
  .nav-number
    .nav-number-item
      .number-posts
        = @user.articles.count
      .label 'Posts'
    = link_to account_followers_path(account_id: @user.id) do
      .nav-number-item
        .number-followers
          = @user.followers.count
        .label 'Followers'
    = link_to account_followings_path(account_id: @user.id) do
      .nav-number-item
        .number-followings
          = @user.followings.count
        .label 'Following'
  .profile-images
    = image_tag 'sample.png', class: 'profile-image'
    = image_tag 'sample.png', class: 'profile-image'
    = image_tag 'sample.png', class: 'profile-image'
    = image_tag 'sample.png', class: 'profile-image'
    = image_tag 'sample.png', class: 'profile-image'
    = image_tag 'sample.png', class: 'profile-image'

= javascript_pack_tag 'follow'
